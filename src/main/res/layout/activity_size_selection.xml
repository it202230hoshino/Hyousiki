<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EAFFD0"
    android:orientation="vertical"
    tools:context=".SizeSelection">

    <TextView
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="サイズをえらんでね！"
        android:textColor="@color/black"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30sp"
        android:orientation="vertical">

        <ImageButton
            android:id="@+id/imageButton"
            android:layout_width="320dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:background="@drawable/bingo3" />

        <Space
            android:layout_width="match_parent"
            android:layout_height="35sp" />

        <ImageButton
            android:id="@+id/imageButton2"
            android:layout_width="320dp"
            android:layout_height="129dp"
            android:layout_gravity="center"
            android:background="@drawable/bingo4" />
    </LinearLayout>


<!--    <ImageButton-->
<!--        android:id="@+id/imageButton3"-->
<!--        android:layout_width="100dp"-->
<!--        android:layout_height="40dp"-->
<!--        android:layout_gravity="center"-->
<!--        android:layout_marginTop="30sp"-->
<!--        android:background="@drawable/tuduki" />-->
    <Button
        android:id="@+id/imageButton3"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30sp"
        android:background="@drawable/tuduki"
        android:text="もどる"
        android:textSize="18sp"
        app:backgroundTint="#FF9800" />
    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="※あそんでいる最中は\n車など周囲に気をつけてね！"

                android:textColor="@color/black"
                android:textSize="20sp" />
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/keisatsuhiyoko" />

    </LinearLayout>

</LinearLayout>